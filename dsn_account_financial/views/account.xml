<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="dsn_account_move_line_calendar" model="ir.ui.view">
            <field name="name">dsn.account.move.line.calendar</field>
            <field name="model">account.move.line</field>
            <field name="type">calendar</field>
            <field name="arch" type="xml">
                <calendar color="state" date_start="date_maturity" string="Account Move Lines">
                    <field name="ref" />
                    <field name="partner_id" />
                    <field name="invoice_origin" />
                    <field name="debit" />
                    <field name="credit" />
                </calendar>
            </field>
        </record>

        <record id="dsn_action_account_move_line" model="ir.actions.act_window">
            <field name="name">dsn.action.account.move.line</field>
            <field name="inherit_id" ref="account_due_list.action_invoice_payments"/>
            <field name="view_mode">tree,form,calendar</field>
        </record>

    </data>
</openerp>