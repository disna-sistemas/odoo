        <record id="dsn_product_template_form_hide_price_history" model="ir.ui.view">
            <field name="name">dsn.product.template.form.hide.price.history</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product_price_history.product_template_price_history_form_view" />
            <field name="type">form</field>
            <field name="arch" type="xml">
                <button name="open_product_historic_prices" position="attributes">
                    <attribute name="invisible">1</attribute>
                </button>
            </field>
        </record>

        <record id="dsn_product_template_safety_group" model="ir.ui.view">
            <field name="name">dsn.cosmetic.safety.group</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view" />
            <field name="type">form</field>
            <field name="arch" type="xml">
                <field name="categ_id" position="after">
                    <group>
                        <field name="dsn_cosmetic_safety_group">Safety Evaluation Group</field>
                    </group>
                </field>
            </field>
        </record>

        <menuitem id="dsn_menu_chemical"
                    name="Chemical"
                    groups="dsn_security.quality_user,dsn_security.qualityGuarantee_user"
                    sequence="88"/>

        <menuitem id="dsn_menu_chemical_formula"
                    name="Formulas"
                    groups="dsn_security.quality_user"
                    parent="dsn_menu_chemical"
                    sequence="1" />

        <menuitem id="dsn_menu_chemical_formula_formula"
                    name="Formulas"
                    groups="dsn_security.quality_user"
                    parent="dsn_menu_chemical_formula"
                    action="dsn_action_formula"
                    sequence="30" />

        <menuitem id="dsn_menu_chemical_formula_ingredients"
                  name="Ingredients"
                  groups="dsn_security.quality_user"
                  parent="dsn_menu_chemical_formula"
                  action="dsn_action_ingredients"
                  sequence="50" />

    </data>
</openerp>