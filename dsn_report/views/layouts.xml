<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

<template id="layout" inherit_id="report.layout">
    <!-- Add report style -->
    <xpath expr="//head" position="inside">
        <link href="/dsn_report/static/css/dsn_report.css" rel="stylesheet"/>
        <style type="text/css">
            <t t-call="dsn_report.style"/>
        </style>
    </xpath>

</template>

<template id="html_container">
    <t t-set="body_classname" t-value="'container'"/>
    <t t-call="report.layout">
        <t t-raw="0"/>
    </t>
</template>

<template id="style">

    .border-black td {
        border-top: 1px solid black !important;
    }
    .table-condensed > thead > tr > th {
        border-bottom: 1px solid black !important;
    }
    .zero_min_height {
        min-height: 0px !important;
    }
</template>

<template id="external_layout">
    <!-- Multicompany -->
    <t t-if="o and 'company_id' in o">
        <t t-set="company" t-value="o.company_id"></t>
    </t>
    <t t-if="not o or not 'company_id' in o">
        <t t-set="company" t-value="res_company"></t>
    </t>

    <t t-call="dsn_report.external_layout_header" />
    <t t-raw="0" />
    <t t-call="report.external_layout_footer" />
</template>


<template id="invoice_layout">
    <!-- Multicompany -->
    <t t-if="o and 'company_id' in o">
        <t t-set="company" t-value="o.company_id"></t>
    </t>
    <t t-if="not o or not 'company_id' in o">
        <t t-set="company" t-value="res_company"></t>
    </t>

    <t t-call="dsn_report.invoice_layout_header" />
    <t t-raw="0" />
    <t t-call="dsn_report.invoice_layout_footer" />
</template>



<template id="invoice_layout_header">
    <t t-call="dsn_report.external_document_layout_header" />

<!--
            <div class="col-xs-12">
                <p style="color: rgb(142,144,144); font-family: Comfortaa; font-size: 14px;">C/ del Ferro, nº 33 Pol. Can Magarola - 08100 Mollet del Vallès - Barcelona - España Tel. (+34) 935 706 292 - Fax (+34) 935 706 536
                </p>
            </div>
-->
</template>

<template id="external_document_layout_header">
    <div class="header">
        <div class="row">
            <div class="col-xs-12">
                <span><img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo" style="vertical-align: text-bottom; max-width: 120px; "/></span>
                <span t-if="company.company_registry.startswith('distribuidora')" class="text-left" style="margin-left: 10px; margin-bottom: 0px; color: rgb(142,144,144); font-family: Comfortaa; font-size: 16px;" t-field="company.company_registry"/>
            </div>

        </div>
    </div>
</template>


<template id="invoice_layout_footer">
    <t t-call="dsn_report.external_document_layout_footer" />
</template>


<template id="external_document_layout_footer">
    <div class="footer">
        <!--
        <div class="text-center">
            <div>
            <ul class="list-inline">
                <li><span class="page"/></li>
                <li>/</li>
                <li><span class="topage"/></li>
            </ul>
            </div>
        </div>
        -->
        <div class="col-xs-12">
            <p>
                <hr />
            </p>
            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id"></t>
           </t>
            <t t-if="company.vat='ESA08627515'" >
                <p style="color: rgb(142,144,144); font-family: Comfortaa; font-size: 10px;">C/ del Ferro nº 33,  Pol. Can Magarola   ·   08100 Mollet del Vallès - Barcelona - España   ·  Tel. (+34) 935 706 292   ·   Fax (+34) 935 706 53
                </p>
            </t>
        </div>
        <!--
        <div class="company_data">
            <span><t t-field="company.name"/></span>
            <span><t t-esc="'   ·   '.join(company.street)"/></span>
            <span><t t-esc="'   ·   '.join('Tel. 935706292')"/></span>
        </div>
        -->
        <t t-if="o and o.internal_number">
            <t t-call="dsn_report.registro_mercantil" />
        </t>

    </div>
</template>

<template id="picking_layout">
    <!-- Multicompany -->
    <t t-if="o and 'company_id' in o">
        <t t-set="company" t-value="o.company_id"></t>
    </t>
    <t t-if="not o or not 'company_id' in o">
        <t t-set="company" t-value="res_company"></t>
