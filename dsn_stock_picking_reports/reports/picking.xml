<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

        <report
		    id="dsn_report_stock_picking_certs"
		    model="stock.picking"
		    string="Picking certs"
		    report_type="qweb-pdf"
		    name="dsn_stock_picking_reports.dsn_document_stock_picking_certificate"
		    file="dsn_stock_picking_reports.picking"
		    attachment_use="False"
		/>


		<template id="dsn_document_stock_picking_certificate">

            <xpath expr="//head" position="inside">
                <link rel="stylesheet" type="text/css" href="/dsn_stock_picking_reports/static/src/css/dsn.css" />
            </xpath>

            <t t-call="report.external_layout" />


            <t t-foreach="docs" t-as="o">
                <span t-field="o.name"></span>
                <t t-set="company" t-value="o.company_id" />

                <t t-call="dsn_report.picking_layout_header" />

                <div class="page">

                    <t t-foreach="o.mapped('move_lines.quant_ids.lot_id')" t-as="l">
                        <table style="font-size: xx-small;color: grey;">
                            <tr>
                                <th>Code</th>
                                <th>Description</th>+
                                <th>Cajas</th>
                                <th>Can.Ped.</th>
                                <th>Can.Res.</th>
                                <th>Lote</th>
                                <th>Caducidad</th>

                            </tr>
                            <tr >
                                <td><span t-field="l.product_id.default_code" /> </td>
                                <td><span t-field="l.product_id.name" /> </td>
                                <td></td>
                                <td><span t-esc="sum(q.qty for q in o.move_lines.quant_ids.filtered(lambda x: x.lot_id == l.id))" /></td>

                                <td></td>
                                <td style="padding: 30px;"><span t-field="l.name" /></td>
                                <td><span t-field="l.life_date" /></td>
                            </tr>
                        </table>
                        <br/>
                    </t>
                </div>

                <t t-call="dsn_report.picking_layout_footer" />

            </t>

		</template>

	</data>
</openerp>