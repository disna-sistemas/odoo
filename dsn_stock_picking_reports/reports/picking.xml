<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

        <report
		    id="dsn_report_stock_picking_certs"
		    model="stock.picking"
		    string="Picking certs"
		    report_type="qweb-html"
		    name="dsn_stock_picking_reports.dsn_document_stock_picking_certificate"
		    file="dsn_stock_picking_reports.picking"
		    attachment_use="False"
		/>

        <template id="external_document_layout_header">

            <!--<link position="after">-->
                <!--<link rel="stylesheet" href="/dsn_report/static/src/css/dsnreport.css" />-->
            <!--</link>-->
            <t t-call="report.minimal_layout" />

            <div class="header">

                <t t-if="o and 'company_id' in o">
                    <t t-set="company" t-value="o.company_id">
                        <t t-if="company.company_registry.startswith('distribuidora')">
                            <span><img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo" style="margin-bottom: 5px; vertical-align: text-bottom; max-width: 120px; "/></span>
                        </t>
                    </t>
                </t>
            </div>

        </template>

        <template id="external_document_layout_footer" inherit_id="report.external_layout_footer">

            <div class="footer">

                <!--
                <div class="text-center">
                    <div>
                    <ul class="list-inline">
                        <li><span class="page"/></li>
                        <li>/</li>
                        <li><span class="topage"/></li>
                    </ul>
                    </div>
                </div>
                -->
                    <p>
                        <hr />
                        <hr />
                    </p>
                    <p style="color: rgb(142,144,144); font-family: 'Liberation Sans'; font-size: 10px;">C/ del Ferro nº 33,  Pol. Can Magarola   ·   08100 Mollet del Vallès - Barcelona - España   ·  Tel. (+34) 935 706 292   ·   Fax (+34) 935 706 53

                        </p>


            </div>
        </template>


		<template id="dsn_document_stock_picking_certificate">

            <t t-call="dsn_report.picking_layout_header" />

            <div class="page">


                <t t-foreach="docs" t-as="o">
                    <span t-field="o.name"></span>
                    <t t-set="company" t-value="o.company_id"></t>

                    <t t-foreach="o.mapped('move_lines.quant_ids.lot_id')" t-as="p">
                        <table style="font-size: xx-small;color: grey;">
                            <tr >
                                <td><b>Lote: </b></td>
                                <td style="padding: 30px;"><span t-field="p.name" /></td>
                            </tr>
                            <tr>
                                <td><b>life date:</b></td>
                                <td style="padding-left: 15px; "><span t-field="p.life_date" /></td>
                            </tr>
                        </table>
                        <br/>
                    </t>
                </t>
            </div>

            <t t-call="dsn_report.picking_layout_footer" />
		</template>

	</data>
</openerp>