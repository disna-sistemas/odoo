<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

        <report
		    id="dsn_report_stock_picking_certs"
		    model="stock.picking"
		    string="Picking certs"
		    report_type="qweb-pdf"
		    name="dsn_stock_picking_reports.dsn_document_stock_picking_certificate"
		    file="dsn_stock_picking_reports.picking"
		    attachment_use="False"
		/>


		<template id="dsn_document_stock_picking_certificate">

            <xpath expr="//head" position="inside">
                <link rel="stylesheet" type="text/css" href="/dsn_stock_picking_reports/static/src/css/dsnreport.css" />
            </xpath>

            <t t-call="report.minimal_layout" />


            <t t-foreach="docs" t-as="o">
                <span t-field="o.name"></span>
                <t t-set="company" t-value="o.company_id" />

                <t t-call="dsn_report.picking_layout_header" />

                <div class="page">

                    <t t-foreach="o.mapped('move_lines.quant_ids.lot_id')" t-as="p">
                        <table style="font-size: xx-small;color: grey;">
                            <tr >
                                <td><b>Lote: </b></td>
                                <td style="padding: 30px;"><span t-field="p.name" /></td>
                            </tr>
                            <tr>
                                <td><b>life date:</b></td>
                                <td style="padding-left: 15px; "><span t-field="p.life_date" /></td>
                            </tr>
                        </table>
                        <br/>
                    </t>
                </div>

                <t t-call="dsn_report.picking_layout_footer" />

            </t>

		</template>

	</data>
</openerp>